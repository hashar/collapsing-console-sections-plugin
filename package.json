{
  "private": true,
  "type": "module",
  "scripts": {
    "jest": "jest --ci --reporters=default --reporters=jest-junit",
    "mvnbuild": "",
    "mvntest": "npm run lint && npm run jest",
    "test": "npm run mvntest",
    "lint": "eslint --color eslint.config.js src/main/resources -f eslint-formatter-multiple",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "eslint": "^9.13.0",
    "eslint-formatter-checkstyle": "^8.40.0",
    "eslint-formatter-multiple": "^2.0.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "checkstyle",
        "output": "file",
        "path": "target/eslint-warnings.xml"
      }
    ]
  },
  "jest-junit": {
    "outputDirectory": "target/surefire-reports",
    "outputName": "jest-junit.xml"
  }
}
